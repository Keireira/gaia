{
	"compilerOptions": {
		"outDir": "./dist/",
		"target": "esnext",
		"module": "esnext",
		"jsx": "react",
		"allowJs": true,
		"noEmit": true,
		"isolatedModules": true,
		"esModuleInterop": true,
		"moduleResolution": "node",
		"baseUrl": "src",
		"lib": ["es2015", "es2016", "es2017", "es2018", "esnext", "dom"],
		"paths": {
			"@local/helpers": ["helpers/index"],
			"@local/components": ["components/index"],
			"@local/components/*": ["components/*"],

			"@local/hooks": ["helpers/hooks/index"],
			"@local/hooks/*": ["helpers/hooks/*"],

			"@local": ["./index"],
			"@local/*": ["./*"]
		},
	},
	"exclude": [
		"./node_modules/**/*"
	],
	"include": [
		"./src/**/*"
	]
}

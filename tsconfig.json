{
	"compilerOptions": {
		"outDir": "./dist/",
		"target": "esnext",
		"module": "esnext",
		"jsx": "react",
		"allowJs": true,
		"noEmit": true,
		"isolatedModules": true,
		"esModuleInterop": true,
		"moduleResolution": "node",
		"baseUrl": "src",
		"lib": ["es2015", "es2016", "es2017", "es2018", "esnext", "dom"],
		"paths": {
			"templates/*": ["./templates/*"],
			"templates": ["./templates/index"],

			"components/*": ["./components/*"],
			"components": ["./components/index"],

			"views/*": ["./views/*"],
			"views": ["./views/index"]
		},
	},
	"exclude": ["./node_modules/**/*"],
	"include": ["./**/*"],
}
